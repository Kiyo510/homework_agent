.uk-container
  .uk-section.uk-section-small
    .uk-flex
      .uk-card.uk-card-small.uk-card-body.uk-card-default.uk-margin-small-right.mypage_sidebar.uk-text-center
        .user_image.uk-margin
          - if @user.avatar.attached?
            = image_tag @user.avatar, alt: 'プロフィール画像',class: 'uk-border-circle'
          - else
            = image_tag '/assets/noimage.png', alt: 'プロフィール画像', class: 'uk-border-circle'
        .user_nickname.uk-margin
          %p= @user.nickname
        .uk-margin-remove-top
          - if @user.id == current_user.id
            = link_to 'プロフィールを編集する', edit_user_path(current_user), class: 'edit_profile_btn'
        .uk-margin
          - unless @user.id == current_user.id
            - if @is_room == true
              = link_to 'メッセージを送る', room_path(@room_id), class: "message_btn"
            - else
              = form_with model: @room, url: rooms_path, local: true do |f|
                = fields_for @entry do |e|
                  = e.hidden_field :user_id, value: @user.id
                  = f.submit 'メッセージを送る', class: 'message_btn'
      .uk-flex-column.uk-margin-small-left.profole_box
