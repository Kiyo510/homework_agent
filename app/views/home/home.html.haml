.uk-container.uk-container-center
  %h2.heading-title.uk-text-center サブタイトル
  .uk-text-center{"uk-grid" => ""}
    - @items.each do |item|
      .uk-width-1-3.uk-text-left
        .uk-card.uk-card-default
          .uk-card-header.uk-padding-small
            .uk-grid-small.uk-flex-middle{"uk-grid" => ""}
              .uk-width-auto
                - if item.image.attached?
                  = image_tag item.image, alt: '投稿画像', size: '50x50', class: 'uk-border-circle'
                - else
                  = image_tag '/assets/noimage.png', alt: '投稿画像', size: '50x50', class: 'uk-border-circle'
              .uk-width-expand
                %h4.uk-margin-remove-bottom.uk-margin-remove-left
                  = link_to item.user.nickname, user_path(item.user_id)
                %p.uk-text-meta.uk-margin-remove-top
                  = item.created_at
          .uk-card-body.uk-padding-small
            %p.uk-text-bold
              = link_to item.title, item_path(item)